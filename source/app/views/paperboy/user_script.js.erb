// ==UserScript==
// @name         Paperboy loading script
// @version      0.1
// @description  Load and initialize paperboy scripts
// @author       Fernando Darthjee Favini
// @include      *
// ==/UserScript==

(function() {
  'use strict';

  var url = '<%= paperboy_index_url(format: :js) %>';
  var scrpt = document.createElement('script');
  scrpt.setAttribute('type','text/javascript');
  scrpt.setAttribute('src', url);
  scrpt.setAttribute('referrerpolicy', 'no-referrer');
  scrpt.setAttribute('crossorigin', 'anonymous');
  scrpt.setAttribute('defer', 'defer');
  document.querySelector('head').appendChild(scrpt);
})();
