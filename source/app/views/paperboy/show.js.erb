(function() {
  var Paperboy = {

    loadScript(url) {
      var scrpt = document.createElement('script');
      scrpt.setAttribute('type','text/javascript');
      scrpt.setAttribute('src', url);
      document.querySelector('head').appendChild(scrpt);
    },

    listScripts(tag) {
      var localUrl = window.location.origin,
        request = new XMLHttpRequest(),
        url = '<%= domain_scripts_url(format: :json) %>'

      request.overrideMimeType("application/json");
      request.responseType = 'json';
      request.open('GET', url);

      request.onload  = function() {
        Paperboy.parseResponse(request);
      };
      request.send(null);
    },

    parseResponse(request) {
      var index,
        scripts = request.response;

      for (var index = 0; index < scripts.length; index ++) {
        this.loadScript(scripts[index].url);
      }
    }
  }

  Paperboy.listScripts();
})();
