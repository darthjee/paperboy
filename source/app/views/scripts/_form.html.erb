<div class="card shadow-sm">
  <div class="card-header">
    <h4 class="my-0 font-weight-normal">
      Script
    </h4>
  </div>
  <div class="card-body">
    <%= form.input(:name, placeholder: "Script name") %>
    <%= form.input(:external_url, placeholder: "http://www.domain.com/script.js") %>

    <div class="form-group row">
      <div class="offset-2 col-10">
        <%= form.button(
          ng_click: 'gnc.save()',
          ng_disabled: 'gnc.ongoing',
          classes: 'btn-primary',
          text: 'Save'
        ) %>
      </div>
    </div>
  </div>
</div>

