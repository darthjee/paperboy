<div class="card-deck mb-3">
  <div class="card mb-4 shadow-sm">
    <div class="card-header">
      <h4 class="my-0 font-weight-normal">
        Scripts
      </h4>
    </div>
    <div class="card-body">
      <table class="table">
        <thead>
          <th scope="col">Name</th>
          <th scope="col">External Url</th>
        </thead>
        <tbody>
          <tr>
            <td colspan="2">
              <%= angular_safe_link_to(:new_script, {}, class: "text-dark") do %>
                + New Script
              <% end %>
            </td>
          </tr>
          <tr ng-repeat="script in gnc.data">
            <td>
              <%= angular_safe_link_to(:script, { id: "{{script.id}}" }, class: "text-dark") do %>
                {{script.name}}
              <% end %>
            </td>
            <td>{{script.external_url}}</td>
          </tr>
        </tbody>
      </table>

      <%= magicka_display('gnc') do |display|
        display.pagination('pagination',
          path_method: :scripts
        )
      end %>

    </div>
  </div>
</div>

